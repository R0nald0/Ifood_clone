<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItemProdutoDestaque"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageProdutoDestaque"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circle_side_shape_image"
        app:srcCompat="@drawable/default_placeholder" />

    <TextView
        android:id="@+id/textPreco1Destaque"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="R$ 49,90"
        android:textSize="@dimen/titulo_grande"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageProdutoDestaque"
        app:layout_constraintTop_toBottomOf="@+id/imageProdutoDestaque" />

    <TextView
        android:id="@+id/textTituloDestaque"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="RIBS ON THE BARBIE + 2 ACOMPANHAMENTOS + ICED TEA 1L"
        android:textSize="@dimen/titulo_barra_navegacao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageProdutoDestaque"
        app:layout_constraintTop_toBottomOf="@+id/textPreco1Destaque" />

    <TextView
        android:id="@+id/textPreco2Destaque"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="R$ 49,90"
        android:textSize="@dimen/title_1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textPreco1Destaque"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textPreco1Destaque"
        app:layout_constraintTop_toTopOf="@+id/textPreco1Destaque" />
</androidx.constraintlayout.widget.ConstraintLayout>