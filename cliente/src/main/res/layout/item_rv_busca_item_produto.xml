<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageBuscaProduto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Imagem do produto"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circle_shape_image"
        app:srcCompat="@drawable/produto" />

    <TextView
        android:id="@+id/textBuscaTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="RIBS ON THE BARBIE + 2 ACOMPANHAMENTOS + ICED TEA 1L"
        android:textSize="@dimen/texto_extra_pequeno"
        app:layout_constraintEnd_toEndOf="@+id/imageBuscaProduto"
        app:layout_constraintStart_toStartOf="@+id/imageBuscaProduto"
        app:layout_constraintTop_toBottomOf="@+id/imageBuscaProduto" />

    <TextView
        android:id="@+id/textBuscaPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 39,90"
        android:textSize="@dimen/texto_medio"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textBuscaTitulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textBuscaTitulo"
        app:layout_constraintTop_toBottomOf="@+id/textBuscaTitulo" />

</androidx.constraintlayout.widget.ConstraintLayout>