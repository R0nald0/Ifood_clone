<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grafico_principal"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ifood_app.presentation.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_lojaFragment"
            app:destination="@id/lojaFragment" />
    </fragment>
    <fragment
        android:id="@+id/buscaFragment"
        android:name="com.example.ifood_app.presentation.ui.fragments.buscaFragment"
        android:label="fragment_busca"
        tools:layout="@layout/fragment_busca" />
    <fragment
        android:id="@+id/pedidoFragment"
        android:name="com.example.ifood_app.presentation.ui.fragments.pedidoFragment"
        android:label="fragment_pedido"
        tools:layout="@layout/fragment_pedido" />
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.ifood_app.presentation.ui.fragments.perfilFragment"
        android:label="fragment_perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/lojaFragment"
        android:name="com.example.ifood_app.presentation.ui.fragments.LojaFragment"
        android:label="fragment_loja"
        tools:layout="@layout/fragment_loja" >
        <action
            android:id="@+id/action_lojaFragment_to_produtosFragment"
            app:destination="@id/produtosFragment" />
    </fragment>
    <fragment
        android:id="@+id/produtosFragment"
        android:name="com.example.ifood_app.presentation.ui.fragments.ProdutosFragment"
        android:label="fragment_produtos"
        tools:layout="@layout/fragment_produtos" />
</navigation>